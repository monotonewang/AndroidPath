<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <Button 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="clickAlertDialog"
      android:text="点击弹出警告对话框"/>
  
  <Button 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="clickSingleDialog"
      android:text="点击弹出单选对话框"/>
  
  <Button 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="clickMultiDialog"
      android:text="点击弹出多选对话框"/>
  
   <Button 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="clickProgressDialog"
      android:text="点击弹出进度对话框"/>

</LinearLayout>
